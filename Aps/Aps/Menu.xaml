                            <Image Source="pizzafull.png" HeightRequest="100" WidthRequest="100"></Image>
                            <Frame BackgroundColor="Green" HorizontalOptions="Start"  CornerRadius="15" WidthRequest="40" Padding="5">
                                <Label  Text="NEW" FontSize="12" HorizontalTextAlignment="Center"  TextColor="White"/>
