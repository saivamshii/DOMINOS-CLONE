                    </Frame>
                    <Frame Grid.Row="5" Margin="10" Grid.Column="0">
                        <StackLayout>
                            <Image Source="hotdog.png" HeightRequest="100" WidthRequest="100"></Image>
                            <Frame BackgroundColor="Green" HorizontalOptions="Start"  CornerRadius="15" WidthRequest="40" Padding="5">
                                <Label  Text="NEW" FontSize="12" HorizontalTextAlignment="Center"  TextColor="White"/>
                            </Frame>
                            <Label Text="By dominos" FontSize="12" TextColor="Green"/>
